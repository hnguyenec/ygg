{
  "functions": {
    "predeploy": [
      "ng build functions --prod",
      "node tools/scripts/firebase/build-firebase-functions-package-json.js"
    ],
    "source": "dist/apps/functions"
  },
  "hosting": {
    "public": "dist/apps/playwhat",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "database": {
      "port": 9000
    },
    "ui": {
      "enabled": true
    }
  }
}
