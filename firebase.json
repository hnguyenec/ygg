{
  "functions": {
    "predeploy": [
      "npm run lint firebase-functions",
      "npm run build firebase-functions"
    ],
    "source": "/"
  },
  "hosting": {
    "public": "dist/apps/playwhat",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
