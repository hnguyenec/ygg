{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ygg/shared/user": ["libs/shared/user/src/index.ts"],
      "@ygg/shopping/payment": ["libs/shopping/payment/src/index.ts"],
      "@ygg/shopping/order": ["libs/shopping/order/src/index.ts"],
      "@ygg/shopping/cart": ["libs/shopping/cart/src/index.ts"],
      "@ygg/shared/infra/error": ["libs/shared/infra/error/src/index.ts"],
      "@ygg/shared/infra/log": ["libs/shared/infra/log/src/index.ts"],
      "@ygg/shared/ui/ng-material": ["libs/shared/ui/ng-material/src/index.ts"],
      "@ygg/shared/ui/widgets": ["libs/shared/ui/widgets/src/index.ts"],
      "@ygg/shared/ui/themes": ["libs/shared/ui/themes/src/index.ts"],
      "@ygg/playwhat/scheduler": ["libs/playwhat/scheduler/src/index.ts"],
      "@ygg/playwhat/resource": ["libs/playwhat/resource/src/index.ts"],
      "@ygg/shared/infra/data-access": [
        "libs/shared/infra/data-access/src/index.ts"
      ],
      "@ygg/shared/types": ["libs/shared/types/src/index.ts"],
      "@ygg/playwhat/admin": ["libs/playwhat/admin/src/index.ts"],
      "@ygg/shared/ui/navigation": ["libs/shared/ui/navigation/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
