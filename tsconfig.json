      "@ygg/shared/ui/widgets": ["libs/shared/ui/widgets/src/index.ts"],
      "@ygg/shared/ui/themes": ["libs/shared/ui/themes/src/index.ts"],
      "@ygg/playwhat/scheduler": ["libs/playwhat/scheduler/src/index.ts"],
      "@ygg/playwhat/resource": ["libs/playwhat/resource/src/index.ts"],
