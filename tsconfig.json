{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ygg/apps/user/frontend": ["apps/user/frontend/src/index.ts"],
      "@ygg/shared/interfaces": ["libs/shared/interfaces/src/index.ts"],
      "@ygg/shared/user": ["libs/shared/user/src/index.ts"],
      "@ygg/shared/data-access": ["libs/shared/data-access/src/index.ts"],
      "@ygg/shared/form-controls": ["libs/shared/form-controls/src/index.ts"],
      "@ygg/shopping/payment": ["libs/shopping/payment/src/index.ts"],
      "@ygg/shopping/order": ["libs/shopping/order/src/index.ts"],
      "@ygg/shopping/cart": ["libs/shopping/cart/src/index.ts"],
      "@ygg/shared/shopping/abstraction": [
        "libs/shared/shopping/abstraction/src/index.ts"
      ],
      "@ygg/shared/ui-widgets": ["libs/shared/ui-widgets/src/index.ts"],
      "@ygg/shared/infrastructure/abstractions": [
        "libs/shared/infrastructure/abstractions/src/index.ts"
      ],
      "@ygg/shared/infrastructure/error": [
        "libs/shared/infrastructure/error/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
